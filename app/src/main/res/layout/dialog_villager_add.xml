<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blood_pop_whitebg_shape"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_16"
    android:paddingTop="@dimen/dp_16">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="温馨提示"
        android:textColor="@color/TextColor1"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:src="@drawable/def_empty"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/dp_8"
        android:text="查无此人\n请新建个人基本信息"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/blood_add_bluebg_selector"
        android:gravity="center"
        android:text="马上新建"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_cancel"
        style="@style/textColor3_16sp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/blood_cancel_greybod_selector"
        android:gravity="center"
        android:text="以后再说" />
</LinearLayout>