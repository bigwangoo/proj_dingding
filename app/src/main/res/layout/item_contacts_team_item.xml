<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_pressed"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_16"
    android:paddingStart="@dimen/dp_16"
    android:paddingTop="@dimen/dp_8">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/rivAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/dp_16"
        android:src="@drawable/def_user_avatar"
        app:riv_corner_radius="@dimen/dp_100" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tx_text"
            android:textSize="@dimen/sp_18"
            tools:text="亚洲舞王" />

        <TextView
            android:id="@+id/tvLeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvName"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_toEndOf="@id/tvName"
            android:background="@drawable/shape_bg_team_leader"
            android:paddingEnd="@dimen/dp_6"
            android:paddingStart="@dimen/dp_6"
            android:text="负责人"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvHospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_8"
            tools:text="阳高县 " />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_toRightOf="@id/tvHospital"
            tools:text="阳高县 " />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tvName"
            android:layout_alignParentEnd="true"
            tools:text="18344684233" />
    </RelativeLayout>

</LinearLayout>