<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/blood_pop_transparent">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/ctl_content"
        style="@style/blood_pop_whitebg"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:paddingBottom="25dp"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

        <TextView
            android:id="@+id/tv_title"
            style="@style/blood_pop_title"
            android:text="请输入血糖值"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_sugar"
            style="@style/blood_pop_text1"
            android:text="血糖值:"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <EditText
            android:id="@+id/et_sugar"
            style="@style/blood_pop_edittext"
            android:digits="0123456789."
            android:hint=""
            android:inputType="numberDecimal"
            android:maxLength="5"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sugar"
            app:layout_constraintLeft_toRightOf="@+id/tv_sugar"
            app:layout_constraintRight_toLeftOf="@+id/tv_unit1"
            app:layout_constraintTop_toTopOf="@+id/tv_sugar" />

        <TextView
            android:id="@+id/tv_unit1"
            style="@style/blood_pop_text2"
            android:text="mmol/L"
            app:layout_constraintBottom_toBottomOf="@+id/tv_sugar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_sugar" />


        <TextView
            android:id="@+id/tv_add"
            style="@style/textWhite_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/blood_add_bluebg_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="确认"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sugar" />

    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingBottom="@dimen/dp_10"
        android:src="@drawable/blood_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctl_content" />


</android.support.constraint.ConstraintLayout>