<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/blood_pop_transparent">

    <android.support.constraint.ConstraintLayout
        style="@style/blood_pop_whitebg"
        android:paddingBottom="25dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_title"
            style="@style/blood_pop_title"
            android:text="设备信息"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_10"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="序号:" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/blood_choose_pop_text"
            android:layout_marginTop="10dp"
            android:background="@color/BgColor"
            app:layout_constraintTop_toBottomOf="@id/tv_num"
            tools:text="血压仪" />

        <TextView
            android:id="@+id/tv_add"
            style="@style/textWhite_16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/blood_add_bluebg_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="添加设备"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/blood_blue_circle_shape"
            app:layout_constraintBottom_toBottomOf="@+id/tv_name"
            app:layout_constraintRight_toRightOf="@id/tv_add"
            app:layout_constraintTop_toTopOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/textColor3_16sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/blood_cancel_greybod_selector"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/tv_add"
            app:layout_constraintRight_toRightOf="@id/tv_add"
            app:layout_constraintTop_toBottomOf="@+id/tv_add" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>