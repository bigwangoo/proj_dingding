<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg">

    <LinearLayout
        android:id="@+id/ll_title_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/dp_30"
        android:paddingStart="@dimen/dp_30">

        <LinearLayout
            android:id="@+id/ll_c_info"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_v_t_info_c" />

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基本信息"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <View
            android:id="@+id/line1"
            style="@style/line_horizontal"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_c_disease"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivDisease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_v_t_info" />

            <TextView
                android:id="@+id/tvDisease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="病史"
                android:textColor="@color/tx_text_secondary"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <View
            android:id="@+id/line2"
            style="@style/line_horizontal"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <LinearLayout
            android:id="@+id/ll_c_envir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_envir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_v_t_info" />

            <TextView
                android:id="@+id/tv_envir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生活环境"
                android:textColor="@color/tx_text_secondary"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_title_content"
        android:paddingBottom="@dimen/dp_16"
        android:paddingTop="@dimen/dp_8" />

    <ImageView
        android:id="@+id/iv_back_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:src="@drawable/ic_back_top"
        android:visibility="gone"
        tools:visibility="visible" />
</RelativeLayout>