<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_6"
        android:paddingEnd="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_60">

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="@string/record_create_unit" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_build_hospital"
                style="@style/villager_record_right_input"
                android:maxLength="50"
                android:maxLines="4"
                android:singleLine="false" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="建档人" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_build_name"
                style="@style/villager_record_right_input"
                android:maxLength="20" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="责任医生" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_doctor"
                style="@style/villager_record_right_input"
                android:maxLength="20" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="建档日期" />

            <TextView
                android:id="@+id/edt_build_time"
                style="@style/villager_record_right_input"
                android:maxLength="20" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="编号" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_number"
                style="@style/villager_record_right_input"
                android:digits="0123456789"
                android:maxLength="5" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="姓名" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_name"
                style="@style/villager_record_right_input"
                android:inputType="text"
                android:maxLength="20" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout
            style="@style/villager_record_content"
            android:visibility="gone">

            <TextView
                style="@style/villager_record_left"
                android:text="现住址" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_home_address"
                style="@style/villager_record_right_input"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="4"
                android:singleLine="false" />
        </LinearLayout>

        <View
            style="@style/line_horizontal"
            android:visibility="gone" />

        <LinearLayout
            style="@style/villager_record_content"
            android:visibility="gone">

            <TextView
                style="@style/villager_record_left"
                android:text="户籍地址" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_register_address"
                style="@style/villager_record_right_input"
                android:inputType="text"
                android:maxLength="50"
                android:maxLines="4"
                android:singleLine="false" />
        </LinearLayout>

        <View
            style="@style/line_horizontal"
            android:visibility="gone" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="联系电话" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_phone"
                style="@style/villager_record_right_input"
                android:inputType="phone"
                android:maxLength="20" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="性别" />

            <TextView
                android:id="@+id/tv_gender"
                style="@style/villager_record_right_txt" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="出生日期" />

            <TextView
                android:id="@+id/tv_birthday"
                style="@style/villager_record_right_txt" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="身份证号" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_card_no"
                style="@style/villager_record_right_input"
                android:digits="0123456789Xx"
                android:maxLength="18" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="工作单位" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_workplace"
                style="@style/villager_record_right_input"
                android:maxLength="50" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="联系人姓名" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_contact"
                style="@style/villager_record_right_input" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="联系人电话" />

            <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                android:id="@+id/edt_contact_phone"
                style="@style/villager_record_right_input"
                android:inputType="phone"
                android:maxLength="20" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="常住类型" />

            <TextView
                android:id="@+id/tv_resident_type"
                style="@style/villager_record_right_txt" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="民族" />

            <TextView
                android:id="@+id/tv_nation"
                style="@style/villager_record_right_txt" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <!-- 其他 -->
        <LinearLayout
            android:id="@+id/ll_content_nation_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout style="@style/villager_record_content">

                <TextView
                    style="@style/villager_record_left"
                    android:text="少数民族" />

                <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                    android:id="@+id/edt_nation_other"
                    style="@style/villager_record_right_input" />
            </LinearLayout>

            <View style="@style/line_horizontal" />
        </LinearLayout>

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="血型" />

            <TextView
                android:id="@+id/tv_blood_type"
                style="@style/villager_record_right_txt" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="血型RH" />

            <TextView
                android:id="@+id/tv_blood_type_rh"
                style="@style/villager_record_right_txt" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="文化程度" />

            <TextView
                android:id="@+id/tv_degree_of_education"
                style="@style/villager_record_right_txt" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="职业" />

            <TextView
                android:id="@+id/tv_occupation"
                style="@style/villager_record_right_txt" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="婚姻状况" />

            <TextView
                android:id="@+id/tv_marital_status"
                style="@style/villager_record_right_txt" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <LinearLayout style="@style/villager_record_content">

            <TextView
                style="@style/villager_record_left"
                android:text="医疗费用支付方式" />

            <TextView
                android:id="@+id/tv_pay_method"
                style="@style/villager_record_right_txt" />
        </LinearLayout>

        <View style="@style/line_horizontal" />

        <!-- 其他 -->
        <LinearLayout
            android:id="@+id/ll_content_method_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout style="@style/villager_record_content">

                <TextView
                    style="@style/villager_record_left"
                    android:text="其他支付方式" />

                <com.tianxiabuyi.txutils_ui.edittext.CleanableEditText
                    android:id="@+id/edt_pay_method_other"
                    style="@style/villager_record_right_input" />
            </LinearLayout>

            <View style="@style/line_horizontal" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>