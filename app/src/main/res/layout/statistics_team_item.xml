<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="12dp"
    android:paddingTop="12dp"
    >

    <TextView
        android:id="@+id/tv_team"
        style="@style/textColor2_16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/calenderView"
        tools:text="健康随访数"
        />

    <TextView
        android:id="@+id/tv_name_contract"
        style="@style/textColor3_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp"
        android:paddingLeft="25dp"
        android:paddingTop="5dp"
        android:text="签约居民数"
        app:layout_constraintTop_toBottomOf="@+id/tv_team"
        />


    <TextView
        android:id="@+id/tv_unit_contract"
        style="@style/statistics_man_text"
        android:paddingLeft="8dp"
        android:paddingRight="15dp"
        android:text="人"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_contract"
        app:layout_constraintRight_toLeftOf="@+id/iv_contract"
        app:layout_constraintTop_toTopOf="@+id/tv_name_contract"
        />

    <TextView
        android:id="@+id/tv_contract"
        style="@style/textColor1_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_contract"
        app:layout_constraintRight_toLeftOf="@+id/tv_unit_contract"
        app:layout_constraintTop_toTopOf="@+id/tv_name_contract"
        />

    <ImageView
        android:id="@+id/iv_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_arrow_next"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_contract"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_contract"
        />

    <TextView
        android:id="@+id/tv_name_man"
        style="@style/textColor3_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="25dp"
        android:text="健康档案数"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_contract"
        />

    <TextView
        android:id="@+id/tv_unit_man"
        style="@style/statistics_man_text"
        android:paddingLeft="8dp"
        android:paddingRight="15dp"
        android:text="人"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_man"
        app:layout_constraintRight_toLeftOf="@+id/iv_unit_man"
        app:layout_constraintTop_toTopOf="@+id/tv_name_man"
        />

    <TextView
        android:id="@+id/tv_man"
        style="@style/textColor1_16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_man"
        app:layout_constraintRight_toLeftOf="@+id/tv_unit_man"
        app:layout_constraintTop_toTopOf="@+id/tv_name_man"
        />

    <ImageView
        android:id="@+id/iv_unit_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_arrow_next"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_man"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_name_man"
        />

</android.support.constraint.ConstraintLayout>