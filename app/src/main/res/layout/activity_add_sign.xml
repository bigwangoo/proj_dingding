<?xml version="1.0" encoding="utf-8"?>
<com.tianxiabuyi.txutils.widget.BounceScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bg"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <requestFocus />

        <View style="@style/TxHorizontalLine" />

        <com.tianxiabuyi.txutils_ui.setting.SettingItemView
            android:id="@+id/siv_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:padding="@dimen/dp_4"
            app:sivArrowEnabled="true"
            app:sivLeftText="区域"
            app:sivLeftTextSize="@dimen/sp_16"
            app:sivRightTextColor="@color/TextColor1" />

        <View style="@style/TxHorizontalLine" />

        <com.tianxiabuyi.txutils_ui.setting.SettingItemView
            android:id="@+id/siv_family_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:padding="@dimen/dp_4"
            app:sivLeftText="家庭类别"
            app:sivLeftTextSize="@dimen/sp_16"
            app:sivRightTextColor="@color/TextColor1" />

        <View style="@style/TxHorizontalLine" />

        <com.tianxiabuyi.txutils_ui.setting.SettingItemView
            android:id="@+id/siv_family_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:padding="@dimen/dp_4"
            app:sivArrowEnabled="true"
            app:sivLeftText="家庭住址"
            app:sivLeftTextSize="@dimen/sp_16"
            app:sivRightTextColor="@color/TextColor1" />

        <View style="@style/TxHorizontalLine" />

        <com.tianxiabuyi.txutils_ui.setting.SettingItemView
            android:id="@+id/siv_sign_team"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:padding="@dimen/dp_4"
            app:sivArrowEnabled="true"
            app:sivLeftText="签约团队"
            app:sivLeftTextSize="@dimen/sp_16"
            app:sivRightTextColor="@color/TextColor1" />

        <View style="@style/TxHorizontalLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_14"
            android:text="签约成员"
            android:textColor="@color/tx_text_secondary"
            android:textSize="@dimen/sp_16" />

        <View style="@style/TxHorizontalLine" />

        <LinearLayout
            android:id="@+id/ll_family_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_8"
            android:visibility="gone">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="名称"
                android:textColor="@color/TextColor3"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="姓名"
                android:textColor="@color/TextColor3"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="性别"
                android:textColor="@color/TextColor3"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="1"
                android:gravity="center"
                android:text="年龄"
                android:textColor="@color/TextColor3"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_weight="2"
                android:gravity="center"
                android:text="服务包"
                android:textColor="@color/TextColor2"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <View style="@style/TxHorizontalLine" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sign_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_add_householder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_add_householder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableEnd="@drawable/tx_arrow_forward"
                android:drawableRight="@drawable/tx_arrow_forward"
                android:gravity="center_vertical"
                android:hint="点击添加户主"
                android:minHeight="@dimen/dp_60"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                android:textSize="@dimen/sp_16" />

            <View style="@style/TxHorizontalLine" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableEnd="@drawable/tx_arrow_forward"
            android:drawableRight="@drawable/tx_arrow_forward"
            android:gravity="center_vertical"
            android:hint="点击添加家庭成员"
            android:minHeight="@dimen/dp_60"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:textSize="@dimen/sp_16" />

        <View style="@style/TxHorizontalLine" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_14"
            android:text="备注（可选）"
            android:textColor="@color/tx_text_secondary"
            android:textSize="@dimen/sp_16" />

        <EditText
            android:id="@+id/edt_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="top"
            android:hint="点击添加备注"
            android:inputType="text"
            android:minHeight="@dimen/dp_120"
            android:padding="@dimen/dp_16"
            android:textSize="@dimen/sp_16" />

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_60"
            android:background="@drawable/selector_bg_btn_blue_circle"
            android:text="确定"
            android:textColor="@color/white" />

    </LinearLayout>
</com.tianxiabuyi.txutils.widget.BounceScrollView>