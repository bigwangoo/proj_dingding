<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#b5e5ff"/>
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/dp_50"/>
            <padding
                android:bottom="6dp"
                android:left="20dp"
                android:right="20dp"
                android:top="6dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary"/>
            <solid android:color="@color/white"/>
            <corners android:radius="@dimen/dp_50"/>
            <padding
                android:bottom="4dp"
                android:left="16dp"
                android:right="16dp"
                android:top="4dp"/>
        </shape>
    </item>
</selector>