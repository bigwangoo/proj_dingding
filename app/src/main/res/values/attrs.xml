<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="StateButton">

        <!--text color-->
        <attr name="normalTextColor" format="color|reference" />
        <attr name="pressedTextColor" format="color|reference" />
        <attr name="unableTextColor" format="color|reference" />

        <!--stroke width and color, dash width, dash gap-->
        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />
        <attr name="normalStrokeWidth" format="dimension|reference" />
        <attr name="pressedStrokeWidth" format="dimension|reference" />
        <attr name="unableStrokeWidth" format="dimension|reference" />
        <attr name="normalStrokeColor" format="color|reference" />
        <attr name="pressedStrokeColor" format="color|reference" />
        <attr name="unableStrokeColor" format="color|reference" />

        <!--background color-->
        <attr name="normalBackgroundColor" format="color|reference" />
        <attr name="pressedBackgroundColor" format="color|reference" />
        <attr name="unableBackgroundColor" format="color|reference" />

        <!--background radius-->
        <attr name="statusButtonRadius" format="dimension|reference" />
        <attr name="statusButtonRound" format="boolean|reference" />

        <!--animation duration-->
        <attr name="animationDuration" format="integer|reference" />

    </declare-styleable>

    <!-- 加载状态布局 -->
    <declare-styleable name="LoadingLayout">
        <!--加载中布局-->
        <attr name="ldl_loading_layout" format="reference" />
        <attr name="ldl_loading_img" format="reference" />
        <attr name="ldl_loading_tv" format="string" />
        <!--空布局-->
        <attr name="ldl_empty_layout" format="reference" />
        <attr name="ldl_empty_img" format="reference" />
        <attr name="ldl_empty_tv" format="string" />
        <!--错误布局-->
        <attr name="ldl_error_layout" format="reference" />
        <attr name="ldl_error_img" format="reference" />
        <attr name="ldl_error_tv" format="string" />
        <!--无网络布局-->
        <attr name="ldl_net_layout" format="reference" />
        <attr name="ldl_net_img" format="reference" />
        <attr name="ldl_net_tv" format="string" />
    </declare-styleable>

    <!-- 短信验证码输入布局 -->
    <declare-styleable name="SmsCodeInputLayout">
        <attr name="box" format="integer" />
        <attr name="child_h_padding" format="dimension" />
        <attr name="child_v_padding" format="dimension" />
        <attr name="child_width" format="dimension" />
        <attr name="child_height" format="dimension" />
        <attr name="padding" format="dimension" />
        <attr name="box_bg_focus" format="reference" />
        <attr name="box_bg_normal" format="reference" />
        <attr name="inputType" format="string" />
    </declare-styleable>

    <!-- 任务进度视图 -->
    <declare-styleable name="ProgressLineView">
        <attr name="pv_max" format="integer" />
        <attr name="pv_progress" format="integer" />
        <attr name="pv_progressHeight" format="dimension" />
        <attr name="pv_borderWidth" format="dimension" />
        <attr name="pv_borderColor" format="color" />
        <attr name="pv_progressColor" format="color" />
        <attr name="pv_progressRadius" format="dimension" />
        <attr name="pv_progressDesc" format="string" />
        <attr name="pv_progressDescColor" format="color" />
        <attr name="pv_isShowDesc" format="boolean" />
    </declare-styleable>

    <!-- 水波扩散视图 -->
    <declare-styleable name="RippleView">
        <!--中心圆颜色-->
        <attr name="rv_center_color" format="color" />
        <!--中心圆半径-->
        <attr name="rv_center_radius" format="integer" />
        <!--扩散圆颜色-->
        <attr name="rv_spread_color" format="color" />
        <!--扩散最大半径-->
        <attr name="rv_spread_max_radius" format="integer" />
        <!--扩散间距-->
        <attr name="rv_spread_distance" format="integer" />
        <!--扩散延迟间隔-->
        <attr name="rv_spread_delay_milliseconds" format="integer" />
    </declare-styleable>

</resources>