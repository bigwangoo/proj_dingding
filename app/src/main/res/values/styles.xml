<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 无标题栏 -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 开屏页 -->
    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <!--<item name="android:windowBackground">@drawable/splash_1</item>-->
    </style>

    <!-- 文字样式 -->
    <style name="text_normal">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_normal_16sp">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_normal_18sp">
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_second">
        <item name="android:textColor">@color/text_second</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_second_16sp">
        <item name="android:textColor">@color/text_second</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_second_18sp">
        <item name="android:textColor">@color/text_second</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_gray">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_gray_16sp">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_gray_18sp">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 横线 -->
    <style name="TxHorizontalLine">
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/tx_bg_line</item>
    </style>

    <!-- 竖线 -->
    <style name="TxVerticalLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1px</item>
        <item name="android:background">@color/tx_bg_line</item>
    </style>

    <!-- 输入框 -->
    <style name="EditText_Bg_White">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <!-- 输入框 -->
    <style name="EditText_White_Bg_SingleLine" parent="EditText_Bg_White">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 搜索输入框 -->
    <style name="TxStyleEditText">
        <item name="android:background">@drawable/tx_bg_search</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/dimgray</item>
        <item name="android:textColor">@color/tx_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:hint">搜索科室/专家</item>
    </style>

    <!-- 下拉 Popup -->
    <style name="pop_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_slide_in</item>
        <item name="android:windowExitAnimation">@anim/pop_slide_out</item>
    </style>

</resources>
